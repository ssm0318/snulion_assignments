<h2 class="with-left-margin">Log In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field mdl-textfield mdl-js-textfield comment-textfield">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mdl-textfield__input margin-top" %>
    </div>

    <div class="field mdl-textfield mdl-js-textfield comment-textfield">
      <%= f.label :password %><br>
      <%= f.password_field :password, autofocus: true, autocomplete: "password", class: "mdl-textfield__input margin-top" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect with-left-margin" for="checkbox-1">
        <%= f.check_box :remember_me, class: "mdl-checkbox__input", id: "checkbox-1" %>
        <span class="mdl-checkbox__label", id= "checkbox-1" ><%= f.label :remember_me %></span>
      </label>
    <% end -%>

  <div class="actions">
    <br><%= f.submit "Log in", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored with-left-margin" %><br>
  </div>
<% end %>

<br><%= render "users/shared/links" %>
